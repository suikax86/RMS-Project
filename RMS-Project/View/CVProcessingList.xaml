<Page x:Class="PTTK_DuyetHoSo.CVProcessingList"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PTTK_DuyetHoSo"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="HoSo_XuLy">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>


        <ListView Grid.Row="0" Margin="10" ItemsSource="{Binding NearExpiryCompanies}">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Mã hồ sơ" DisplayMemberBinding="{Binding Name}"/>
                    <GridViewColumn Header="Trạng thái" DisplayMemberBinding="{Binding ExpiryDate}"/>

                </GridView>
            </ListView.View>
        </ListView>
       
    </Grid>
</Page>
