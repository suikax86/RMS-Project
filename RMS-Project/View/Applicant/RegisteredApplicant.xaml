<Window x:Class="RMS_Project.View.Applicant.RegisteredApplicant"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RMS_Project.View.Applicant"
        mc:Ignorable="d"
        Title="RegisteredApplicant" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBox x:Name="txtSearch" Grid.Row="0" Margin="231,10,152,10" />
        <Button x:Name="btnSearch" Grid.Row="0" Margin="684,10,10,10" Content="Search" Click="BtnSearch_OnClick"/>
        <!-- Placeholder for JobList UserControl -->
        <ContentControl x:Name="jobListPlaceholder" Grid.Row="1" Margin="10"/>

        
        <Label Content="CMND" HorizontalAlignment="Left" Margin="35,0,0,0" VerticalAlignment="Center" Width="179" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontWeight="Bold"/>
    </Grid>
</Window>
